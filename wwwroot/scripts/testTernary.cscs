//TERNARY IN TERNARY
s1 = "ABC";
s2 = "DEF";
s3 = "GHI";
string1 =  ((3 < 4) ?  s3  :    ((1 < 2) ? s1 : s2)     );   //IT WORKS
console.log("Ternary in ternary 1: " + string1); 

string1 =  ((3 < 4) ?      ((1 < 2) ? s1 : s2)     : s3 );   //IT WORKS
console.log("Ternary in ternary 2: " + string1); 

x = true ? ( false ?  100 : 200 ) : 300;        //IT WORKS
console.log("Ternary in ternary 3: " + x);
