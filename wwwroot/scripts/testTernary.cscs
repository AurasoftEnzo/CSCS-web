// TERNARY SIMPLE EXAMPLES
string1 = (1 < 2) ? "ABC" : "DEF"; //IT WORKS
console.log("Simple example 1: " + string1);

string1 = "ABC" + ((1 < 2) ? "DEF" : "GHI"); //IT WORKS
console.log("Simple example 2: " + string1);

try
{
    string1 = "ABC" + ((1 < 2) ? "DEF" : "GHI") + "JKL"; //IT DOESN'T WORK
    console.log("Simple example 3: " + string1);
}
catch(ex)
{
    console.log("Simple example 3 ERROR: " + ex);
}

